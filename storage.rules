rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Product images: allow public read, sellers can upload/delete their own images
    match /{sellerId}/listings/{listingId}/{allPaths=**} {
      allow read; // Public read access for product images
      allow write: if request.auth != null && request.auth.uid == sellerId; // Only seller can write
      allow delete: if request.auth != null && request.auth.uid == sellerId; // Only seller can delete
    }
    
    // Products folder (alternative path structure)
    match /products/{allPaths=**} {
      allow read; // Public read access
      allow write: if request.auth != null; // Authenticated users can write
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

